<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template overriden due to last page displays page count -->
        <!-- Do not display page section only for report COTIZACION LLANTAS -->
        <template id="inh_external_layout_standard" inherit_id="web.external_layout_standard">
            <xpath expr="//div[hasclass('footer')]" position="replace">
                <t t-if="report_name">
                    <div class="footer o_standard_footer">

                    </div>
                </t>
                <t t-else="">
                    <div class="footer o_standard_footer">
                        <div class="text-center" style="border-top: 1px solid black;">
                            <ul class="list-inline mb4">
                                <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                                     adding d-inline class fixes the problem-->
                                <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span t-field="company.phone"/></li>
                                <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                                <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                                <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                            </ul>

                            <div name="financial_infos">
                                <span t-field="company.report_footer"/>
                            </div>

                            <div t-if="report_type == 'pdf'" class="text-muted">
                                Page: <span class="page"/> / <span class="topage"/>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

        <template id="custom_report_tabla_nutrimental">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                     <t t-call="web.external_layout">
                        <t t-set="report_name" t-value="'custom_report_tabla_nutrimental'"/>
                        <t t-set="doc" t-value="doc.with_context(lang=env.lang)" />
                         <div class="page">
                            <div class="oe_structure"/>
                             <table class="table">
                                <tr>
                                    <td colspan="4" style="padding-bottom:0px;"></td>
                                </tr>
                             </table>
                             <table class="table">
                                 <tr>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;width: 15%; vertical-align:middle;"><b>Producto</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;width: 30%;vertical-align:middle;"><b>Desc</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Promocion</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Tnd</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Prov</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Bod</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>GR</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Origen</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>12 meses</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>6 meses</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Contado</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Cap ca</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Vel</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Trea</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Trac</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Temp</b></td>
                                     <td style="border-style: solid;border-width: 1px;border-top: 1px solid #000000;padding-bottom:0px;padding-top:0px;font-size:12px;vertical-align:middle;"><b>Ubicaci√≥n</b></td>
                                 </tr>
                                 <tr>
                                     <td style="padding-bottom:0px;padding-top:0px;"/>
                                     <td style="border-bottom: 1px solid #000000;padding-bottom:0px;padding-top:10px;" colspan="14"/>
                                 </tr>
                                 <tr>
                                     <td style="border-style:none;padding-top:0px;"/>
                                     <td style="border-style:none;padding-top:0px;" colspan="14">
                                         <b><t t-esc="doc.company_id.header"/></b>
                                     </td>
                                 </tr>
                                 <t t-set="products_without_order"
                                        t-value="doc._get_all_products(doc)"/>

                                 <tr t-foreach="all_products" t-as="product">
                                    <t t-set="product" t-value="product[0]"/>
                                    <td style="border-style:none;padding-top:0px;padding-bottom:2px;font-size:12px">
                                        <t t-esc="product.product_id"/>
                                    </td>
                                    <td style="border-style:none;padding-top:0px;padding-bottom:2px;font-size:12px">
                                        <t t-esc="product.product_id.name"/>
                                    </td>
                                 </tr>
                             </table>
                         </div>
                     </t>
                </t>
            </t>
        </template>

        <report
            id="action_custom_report_tabla_nutrimental"
            string="Tabla Nutrimental xml"
            model="mrp.bom"
            report_type="qweb-pdf"
            file="sam_reportes.custom_report_tabla_nutrimental"
            name="sam_reportes.custom_report_tabla_nutrimental"
        />

        <record id="paperformat_custom_tabla_nutrimental_report" model="report.paperformat">
            <field name="name">Tabla Nutrimental Report</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_custom_report_tabla_nutrimental" model="ir.actions.report">
            <field name="paperformat_id" ref="paperformat_custom_tabla_nutrimental_report"/>
        </record>

    </data>
</odoo>
